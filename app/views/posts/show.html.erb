<h3>제목 : <%= @post.title %></h3>
<h3>작성자 : <%= @post.user.name %></h3>
<p><%= @post.content %></p>

<hr>
<h3>댓글 작성</h3>
<form action="<%= post_comments_path(@post) %>" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  댓글 : <input type="text" name="body">
  <button>제출</button>
</form>
<hr>
<% @post.comments.each do |comment| %>
  작성자 : <%= comment.user.name %>
  댓글 : <%= comment.body %>
  <a href="<%= comment_path(comment) %>" data-method="delete">삭제</a>
  <br>
<% end %>

<a href="<%= posts_path %>">글 목록</a>

